{
    "version": 4,
    "configurations": [
        {
            "name": "windows-gcc-x64",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/**.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build C/C++ Program",
            "miDebuggerPath": "gdb",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "cStandard": "${default}",
            "cppStandard": "c++14",
            "compilerPath": "C:/msys64/ucrt64/bin/cpp.exe",
            "intelliSenseMode": "${default}"
        }
    ]
}